{% extends 'ElecBundle:BackEnd:index.html.twig' %}

{% block content %}
    <h1 class="sub-header">OrderItem list</h1>

    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Unitprice</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for orderItem in orderItems %}
            <tr>
                <td><a href="{{ path('orderitem_show', { 'id': orderItem.id }) }}">{{ orderItem.id }}</a></td>
                <td>{{ orderItem.unitPrice }}</td>
                <td>{{ orderItem.quantity }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('orderitem_show', { 'id': orderItem.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('orderitem_edit', { 'id': orderItem.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('orderitem_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
