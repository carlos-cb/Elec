{% extends 'base.html.twig' %}

{% block body %}
    <h1>Profile</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>Phonenumber</th>
                <td>{{ profile.phonenumber }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ profile.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ profile.lastname }}</td>
            </tr>
            <tr>
                <th>Nation</th>
                <td>{{ profile.nation }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ profile.adress }}</td>
            </tr>
            <tr>
                <th>Companyname</th>
                <td>{{ profile.companyname }}</td>
            </tr>
            <tr>
                <th>Businessmode</th>
                <td>{{ profile.businessMode }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('profile_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('profile_edit', { 'id': profile.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
