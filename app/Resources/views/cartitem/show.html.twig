{% extends 'ElecBundle:BackEnd:index.html.twig' %}

{% block content %}
    <h1 class="sub-header">CartItem</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cartItem.id }}</td>
            </tr>
            <tr>
                <th>Unitprice</th>
                <td>{{ cartItem.unitPrice }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ cartItem.quantity }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cartitem_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cartitem_edit', { 'id': cartItem.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
